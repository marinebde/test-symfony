{% extends 'base.html.twig' %}

{% block title %}Liste des Specialités{% endblock %}

{% block body %}
    <h1 class="title">Liste des Specialités</h1>

    <button class="new-container">
        <a href="{{ path('app_specialite_new') }}" class="new">Créer nouvelle</a>
    </button>

    <table class="table table-index-page">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for specialite in specialites %}
            <tr>
                <td>{{ specialite.id }}</td>
                <td>{{ specialite.name }}</td>
                <td>
                    <a href="{{ path('app_specialite_show', {'id': specialite.id}) }}">Voir</a>
                    <a href="{{ path('app_specialite_edit', {'id': specialite.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">pas de résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
