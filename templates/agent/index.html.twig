{% extends 'base.html.twig' %}

{% block title %}Liste des Agents{% endblock %}

{% block body %}
    <h1 class="title">Liste des Agents</h1>

    <button class="new-container">
        <a href="{{ path('app_agent_new') }}" class="new">Créer nouveau</a>
    </button>

    <table class="table table-index-page">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de Naissance</th>
                <th>Code </th>
                <th>Nationalité</th>
                <th>Spécialité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
            <tr>
                <td>{{ agent.id }}</td>
                <td>{{ agent.lastname }}</td>
                <td>{{ agent.firstname }}</td>
                <td>{{ agent.dateOfBirth ? agent.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ agent.identificationCode }}</td>
                <td>{{ agent.nationality }}</td>
                <td>{% for specialite in agent.specialite %}
                    {{ specialite.name }}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_agent_show', {'id': agent.id}) }}">Voir</a>
                    <a href="{{ path('app_agent_edit', {'id': agent.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">pas de résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
