{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1 class="title-show-page">{{ contact.lastname }} {{ contact.firstname }}</h1>

    <table class="table table-show">
        <tbody>
            <tr>
                <th class="th-show">Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th class="th-show">Nom</th>
                <td>{{ contact.lastname }}</td>
            </tr>
            <tr>
                <th class="th-show">Prénom</th>
                <td>{{ contact.firstname }}</td>
            </tr>
            <tr>
                <th class="th-show">Date de Naissance</th>
                <td>{{ contact.dateOfBirth ? contact.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th class="th-show">Nationalité</th>
                <td>{{ contact.nationality }}</td>
            </tr>
            <tr>
                <th class="th-show">Code</th>
                <td>{{ contact.codeName }}</td>
            </tr>
        </tbody>
    </table>

    <div class="show-actions">
        <a href="{{ path('app_contact_index') }}" class="show-retour">Retour</a>
        <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="show-modifier">Modifier</a>
    </div>

    <div class="show-supprimer">
        {{ include('contact/_delete_form.html.twig') }}
    </div>

{% endblock %}
